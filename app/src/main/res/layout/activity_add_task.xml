<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTaskActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_a_title" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_description"
        android:layout_marginTop="10dp" />


    <EditText
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a category"
        android:layout_marginTop="10dp"
        >
    </EditText>

    <CheckBox android:id="@+id/checkboxNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notification"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:id="@+id/selectDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_finish_time_and_date"
        android:layout_marginTop="10dp"
        android:textSize="20sp">
    </TextView>
    <Button
        android:id="@+id/selectTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select time"
        android:onClick="popTimeClicker"
        android:layout_marginTop="10dp"
        >

    </Button>

    <Button
        android:id="@+id/datePickerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select date"
        android:onClick="openDatePicker"
        android:layout_marginTop="10dp"
        >

    </Button>

    <TextView
        android:id="@+id/addAttachment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add an attachment"
        android:layout_marginTop="10dp"
        android:textSize="20sp">
    </TextView>

    <Button
        android:id="@+id/browseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Browse Files"
        android:onClick="openDatePicker"
        android:layout_marginTop="10dp"

        >

    </Button>

    <Button
        android:id="@+id/saveTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Task"
        android:onClick="openDatePicker"
        android:layout_marginTop="10dp"

        >
    </Button>

</LinearLayout>
