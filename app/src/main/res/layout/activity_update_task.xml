<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTaskActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/title_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_a_title" />

    <EditText
        android:id="@+id/description_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_description"
        android:layout_marginTop="10dp" />


    <EditText
        android:id="@+id/category_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a category"
        android:layout_marginTop="10dp"
        >
    </EditText>

    <CheckBox android:id="@+id/checkboxNotification_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notification"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:id="@+id/timeOfCreation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time of creation: "
        android:layout_marginTop="10dp"
        android:textSize="20sp">
    </TextView>

    <TextView
        android:id="@+id/timeOfExecution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time of execution: "
        android:layout_marginTop="10dp"
        android:textSize="20sp">
    </TextView>


    <TextView
        android:id="@+id/addAttachment_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attachment: "
        android:layout_marginTop="10dp"
        android:textSize="20sp">
    </TextView>

    <Button
        android:id="@+id/browseButton_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Browse Files"
        android:onClick="openDatePicker"
        android:layout_marginTop="10dp"

        >

    </Button>

    <Button
        android:id="@+id/saveTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Task"
        android:textColor="@android:color/holo_green_light"
        android:onClick="openDatePicker"
        android:layout_marginTop="10dp"

        >
    </Button>

    <Button
        android:id="@+id/deleteTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete task"
        android:textColor="@android:color/holo_red_dark"
        android:onClick="openDatePicker"
        android:layout_marginTop="10dp"

        >
    </Button>

</LinearLayout>
